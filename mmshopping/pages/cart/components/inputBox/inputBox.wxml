<view class="input-box">
	<!-- capture-catch:tap="handleCancel" -->
	<view class="box-wrap">
		<!-- capture-bind:tap="() => void" -->
		<view class="box-title">请输入您的内容</view>
		<view class="box-content">
			<input type="number" value="{{newNum}}" bindblur="handleBlur" />
		</view>
		<view class="box-footer">
			<button type="primary" size="mini" bind:tap="handleOk">确定</button>
		</view>
	</view>
</view>
  
