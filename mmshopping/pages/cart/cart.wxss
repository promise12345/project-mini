.goods_cart .goods_list .list_item {
  display: flex;
  align-items: center;
}
.goods_cart .goods_list .list_item image {
  flex: 1;
}
.goods_cart .goods_list .list_item .list_intro {
  flex: 2;
  height: 100%;
}
.goods_cart .goods_list .list_item .list_intro .good_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.goods_cart .goods_list .list_item .list_intro .good_edit {
  display: flex;
  justify-content: space-between;
}
.goods_cart .goods_list .list_item .list_intro .good_edit .good_price {
  flex: 1;
  color: var(--themeColor);
}
.goods_cart .goods_list .list_item .list_intro .good_edit .num_edit {
  flex: 1;
  display: flex;
  border: 2rpx solid #eee;
  text-align: center;
}
.goods_cart .goods_list .list_item .list_intro .good_edit .num_edit .input {
  border-left: 2rpx solid #eee;
  border-right: 2rpx solid #eee;
}
.goods_cart .goods_list .list_item .list_intro .good_edit .num_edit .plus,
.goods_cart .goods_list .list_item .list_intro .good_edit .num_edit .add {
  padding: 0 20rpx;
  display: flex;
  align-items: center;
}
.goods_cart .sum_wrap {
  position: fixed;
  bottom: 0;
  border-top: 2rpx solid #eee;
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}
.goods_cart .sum_wrap .sum_item {
  flex: 1;
  display: flex;
  align-items: center;
}
.goods_cart .sum_wrap .sum_calc {
  flex: 2;
  display: flex;
  align-items: center;
  text-align: center;
}
.goods_cart .sum_wrap .sum_calc > view {
  flex: 1;
}
.goods_cart .sum_wrap .sum_calc .total_price {
  border-left: 2rpx solid #eee;
  border-right: 2rpx solid #eee;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.goods_cart .sum_wrap .sum_calc .buy_btn {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  background: var(--themeColor);
}
